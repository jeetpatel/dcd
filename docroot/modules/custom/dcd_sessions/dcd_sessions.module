<?php

/**
 * @file
 * Contains dcd_sessions.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\dcd_sessions\Event\SessionSubmitEvent;
use Drupal\Core\Entity\EntityInterface;

/**
 * Implements hook_help().
 */
function dcd_sessions_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the dcd_sessions module.
    case 'help.page.dcd_sessions':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Manage DCD sessions and workflow.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function dcd_sessions_theme() {
  return [
    'dcd_sessions' => [
      'render element' => 'children',
    ],
  ];
}

/**
 * Send email notification on session submit event.
 *
 * @param Drupal\Core\Entity\EntityInterface $entity
 *   Entity object.
 */
function dcd_sessions_node_insert(EntityInterface $entity) {
  if ($entity->getEntityTypeId() == 'node') {
    \Drupal::service('event_dispatcher')->dispatch(SessionSubmitEvent::SESSION_SUBMIT, new SessionSubmitEvent($entity));
  }
}

/**
 * Send email notification on session submit event.
 *
 * @param Drupal\Core\Entity\EntityInterface $entity
 *   Entity object.
 */
function dcd_sessions_node_update(EntityInterface $entity) {
  if ($entity->getEntityTypeId() == 'node') {
    \Drupal::service('event_dispatcher')->dispatch(SessionSubmitEvent::SESSION_SUBMIT, new SessionSubmitEvent($entity));
  }
}

/**
 * Implements hook_mail().
 */
function dcd_sessions_mail($key, &$message, $params) {
  switch ($key) {
    case 'session_submit':
      $message['subject'] = $params['subject'];
      $message['body'][] = $params['body'];
      $message['headers'] = [
        'MIME-Version' => '1.0',
        'Content-Type' => 'text/html; charset=UTF-8; format=flowed; delsp=yes',
        'Content-Transfer-Encoding' => '8Bit',
        'X-Mailer' => 'Drupal',
      ];
      break;
  }
}
